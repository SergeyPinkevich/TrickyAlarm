
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="0dp"
    card_view:cardCornerRadius="0dp"
    android:layout_marginBottom="0.5dp"

    card_view:cardBackgroundColor="@color/card_background">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fadingEdgeLength="0dp"
        android:background="@drawable/p3">


        <TextView
            android:text="TextView"
            android:fadingEdgeLength="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/text_color"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:id="@+id/days"
            android:textSize="13dp"/>
        <TextView
            android:text="12:48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="40dp"
            android:id="@+id/time_main"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:textStyle="bold"

            android:fontFamily="casual" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/switch1"
            android:switchMinWidth="100dp"
            android:checked="true"
            android:layout_marginEnd="15dp"
            android:layout_alignParentEnd="true"
            android:switchTextAppearance="@style/TextAppearance.AppCompat"

            android:textColorLink="?attr/actionModeSplitBackground"

            tools:style="@style/AppTheme"
            android:switchPadding="@dimen/activity_horizontal_margin"
            android:thumbTint="@color/text_color"
            android:trackTint="@color/colorPrimary" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="12dp"
            android:textColor="@color/text_color"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:textSize="13dp"
            android:id="@+id/timeLeft"
            android:layout_above="@+id/days"
            android:layout_toEndOf="@+id/time_main" />


    </RelativeLayout>


</android.support.v7.widget.CardView>

